
# start snippet compartments basic
bloom compartments output/hic/binned/bloom_example_1mb.hic architecture/compartments/bloom_example_1mb.ab
# end snippet compartments basic

# start snippet compartments plot
bloomplot -o architecture/compartments/bloom_example_1mb.ab.png chr18 \
     -p square architecture/compartments/bloom_example_1mb.ab \
     -vmin -0.75 -vmax 0.75 -c RdBu_r
# end snippet compartments plot

bloomplot -o ../docsrc/bloom-executable/bloom-analyse-hic/images/bloom_example_1mb.ab.png chr18 \
     -p square architecture/compartments/bloom_example_1mb.ab \
     -vmin -0.75 -vmax 0.75 -c RdBu_r


