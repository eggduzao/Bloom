# This configuration file handles the relative paths to all data required by Bloom.
# If you ought to modify this file, make sure to know how to properly perform such a task.
# For more information, please visit: https://github.com/eggduzao/Bloom.

[ChromosomeSizes]
mm9: chrom_sizes/chrom.sizes.mm9
mm10: chrom_sizes/chrom.sizes.mm10
hg19: chrom_sizes/chrom.sizes.hg19
hg38: chrom_sizes/chrom.sizes.hg38
zv9: chrom_sizes/chrom.sizes.zv9
zv10: chrom_sizes/chrom.sizes.zv10

[ExclusionList]
mm9: exclist/mm9_test.bed
mm10: exclist/mm10.bed
hg19: exclist/hg19.bed
hg38: exclist/hg38_minimal.bed

[Cooler]
command: cooler

[Juicer]
command: java
options: -Djava.awt.headless=true -Xmx32000m -jar
jar: bin/juicer_tools_1.22.01.jar

[Barcode]
bcf: barcode
bc1: barcode1mb,barcode1lb,barcode1bua,barcode1bub,barcode1buc,barcode1bud,barcode1bue,barcode1buf,barcode1bug,barcode1buh
bc2: barcode2mb,barcode2lb,barcode2bua,barcode2bub,barcode2buc,barcode2bud,barcode2bue,barcode2buf,barcode2bug,barcode2buh
